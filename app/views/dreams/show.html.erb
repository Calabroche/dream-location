<div class="big-title-show">
  <h1><%= @dream.name %></h1>
</div>
<div class="text-for-show">
  <p class="car-show-address">Rappel, vous avez choisis la région: <%= @dream.regions %></p>
</div>

<div class="class-for-img" data-controller="carousel">
  <img src="<%= @dream.img_url_one %>" class="show-dreams-image" data-action="click->carousel#openImage">
  <div class="image-show-dreams" data-carousel-target="modal slide">
    <div class="image-modal-content">
      <span data-action="click->carousel#closeImage" class="close">&times;</span>
      <img src="" class="image" data-carousel-target="image">
    </div>
  </div>
  <div class="image-two-show-dreams" data-carousel-target="modal slide">
    <div class="image-modal-content">
      <img src="<%= @dream.img_url_two %>" class="image-two-show-dreams" data-action="click->carousel#openImage">
      <img src="<%= @dream.img_url_three %>" class="image-two-show-dreams" data-action="click->carousel#openImage">
    </div>
  </div>
  <div class="image-three-show-dreams" data-carousel-target="modal slide">
    <div class="image-modal-content">
      <img src="<%= @dream.img_url_four %>" class="image-two-show-dreams" data-action="click->carousel#openImage">
      <img src="<%= @dream.img_url_five %>" class="image-two-show-dreams" data-action="click->carousel#openImage">
    </div>
  </div>
</div>

<script src="https://unpkg.com/@hotwired/stimulus@3.0.0/dist/stimulus.umd.js"></script>


<div class="div-for-des-calandar">
  <div class="show-description">
    <h3>Details</h3>
    <%= @dream.description %>€
  </div>
  <div class="h-calendar">
    <h5> Réserve ton rêve ici !</h5>
      <div class="flatpickr-innerContainer">
        <%= simple_form_for ([@dream, @location]), data: { controller: 'flatpickr' } do |f| %>
          <%= f.input :starts_at, as: :string, input_html: { data: {flatpickr_target: "startsAt"}}%>
          <%= f.input :ends_at, as: :string, input_html: { data: {flatpickr_target: "endsAt"}, id: "end_time"}%>
          <%= f.submit 'Réserver votre rêve', class: "submit" %>
        <% end %>
      </div>
  </div>
</div>

<div class="button_class">
<%= link_to "Retourner sur la listes des rêves", dreams_path, class: "button" %>
</div>
